{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build-storybook": "build-storybook",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "run-p storybook:*",
    "storybook:css": "npm run generate:css -- --watch",
    "storybook:server": "start-storybook -p 6006",
    "test": "vitest",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"playwright test\"",
    "typecheck": "tsc",
    "validate": "run-p lint typecheck test test:e2e",
    "prepare": "husky install"
  },
  "prettier": {},
  "eslintIgnore": [
    "api",
    "node_modules",
    "playwright-report",
    "public/build"
  ],
  "dependencies": {
    "@heroicons/react": "^2.0.16",
    "@remix-run/node": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/serve": "^1.13.0",
    "@remix-run/server-runtime": "^1.13.0",
    "@remix-run/vercel": "^1.13.0",
    "@vercel/node": "^2.6.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@playwright/test": "^1.30.0",
    "@remix-run/dev": "^1.13.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.21.1",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.28.5",
    "babel-loader": "^8.3.0",
    "binode": "^1.0.5",
    "c8": "^7.13.0",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-playwright": "^0.12.0",
    "eslint-plugin-storybook": "^0.6.10",
    "happy-dom": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "msw": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "start-server-and-test": "^1.15.4",
    "tailwindcss": "^3.2.7",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.8.4",
    "vite": "^4.1.2",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run lint:fix",
    "*.{js,jsx,ts,tsx,css,md,mdx}": "npm run format"
  }
}
